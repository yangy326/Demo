<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-03-07 21:22"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView


            android:layout_alignParentEnd="true"

            android:id="@+id/txt_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟进人：金钟国"

            android:fontFamily="monospace"
            android:textColor="@color/darkcyan"
            android:textSize="17sp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_item_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/play"/>

        <ProgressBar
            android:id="@+id/bar_item_voice"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            />
        <TextView
            android:id="@+id/txt_item_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="00:03"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_item_label"

            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="课后跟进"
            android:background="@color/turquoise"
            android:textSize="17sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_item_comment"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天青色等烟雨而我在等你"
            android:textSize="13sp"
            android:textColor="@color/skyblue"
            android:paddingLeft="6dp" />

    </LinearLayout>




</LinearLayout>