<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">
    <ImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="79dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/icon"/>
    <TextView
        android:layout_width="236dp"
        android:layout_height="84dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="150dp"
        android:text="欢迎来到            班主任外呼系统"
        android:textColor="#373737"
        android:textSize="32sp"
        android:textStyle="bold"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="314dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:orientation="vertical">
        android:textSize="16sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edit_selecter"
            >

            <EditText
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLines="1"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_account"
                android:hint="请输入CMS账号"
                android:textColorHint="#9B9B9B "
                android:textColor="#010101"

                android:textSize="16sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edit_selecter"
            >
            <EditText


                android:layout_marginTop="40dp"
                android:maxLines="1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_password"
                android:hint="请输入CMS密码"
                android:background="@null"
                android:textColorHint="#9B9B9B "
                android:textColor="#010101"
                android:textSize="16sp"
                android:drawableBottom="@color/white"
                android:inputType="textPassword"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play"
                android:layout_toRightOf="@id/edit_password"
                android:layout_alignBottom="@id/edit_password"
                android:layout_marginBottom="3dp"/>
        </RelativeLayout>


        <Button
            android:layout_width="191dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="41dp"
            android:text="登录"
            android:textColor="@color/white"
            android:id="@+id/btn_login"
            android:background="@drawable/login_btn"/>
    </LinearLayout>


</FrameLayout>